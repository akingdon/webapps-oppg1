
@{
    ViewBag.Title = "Registrer ny bruker";
}

@model WebAppsOppgave1.Models.User

<div class="container">
    <div class="page-header">
        <h1>Registrer deg</h1>
    </div>
    <div class="jumbotron">

        <form action="/Home/RegisterUser" method="post">
            <table class="table-striped">
                <tr><td>Fornavn: </td><td><input type="text" name="fornavn" /></td></tr>
                <tr><td>Etternavn: </td><td><input type="text" name="etternavn" /></td></tr>
                <tr><td>Adresse: </td><td><input type="text" name="adresse" /></td></tr>
                <tr><td>Postnummer: </td><td><input type="text" name="postnummer" /></td></tr>
                <tr><td>Poststed: </td><td><input type="text" name="poststed" /></td></tr>
                <tr><td>E-postadresse: </td><td><input type="text" name="epost" /></td></tr>
                <tr><td>Passord: </td><td><input type="password" name="passord" /></td></tr>
                <tr><td></td><td><input type="submit" name="register" value="Registrer" /></td></tr>
            </table>
        </form>
    </div>
</div>
