
@{
    ViewBag.Title = "Index";
}

<h2>Bestill flytur</h2>

<div class="row">
<form action="/home/register" method="post">

    <div class="col-sm-6">
    <fieldset>
        <legend>Fly fra:</legend>
        Destinasjon:<br />
        <select name="fromDestination">
            <option value=""></option>
            <option value="Oslo">Oslo</option>
            <option value="Torp">Torp</option>
            <option value="Stockholm">Stockholm</option>
            <option value="København">København</option>
        </select><br />
        Avreise:<br />
        <input type="date" name="fromDate" /><br />
    </fieldset>
    <br /><input type="submit" value="Bestill tur" name="orderButton" />
    </div>

    <div class="col-sm-6">
    <fieldset>
        <legend>Fly til:</legend>
        Destinasjon:<br />
        <select name="toDestination">
            <option value=""></option>
            <option value="Oslo">Oslo</option>
            <option value="Torp">Torp</option>
            <option value="Stockholm">Stockholm</option>
            <option value="København">København</option>
        </select><br />
        Hjemreise:<br />
        <input type="date" name="toDate" /><br />
    </fieldset>        
    </div>    
</form>
</div>
